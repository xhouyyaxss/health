<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hxy.dao.PermissionDao">

    <select id="findByRoleId" parameterType="Integer" resultType="com.hxy.pojo.Permission">

        SELECT p.* FROM t_role_permission r,t_permission p WHERE r.permission_id=p.id AND r.role_id=#{roleId}

    </select>
</mapper>